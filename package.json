{
  "name": "mino-lang",
  "displayName": "Mino Language Support",
  "description": "Language support for Mino component files (.mino)",
  "version": "1.0.4",
  "publisher": "asleepace",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Themes"
  ],
  "keywords": [
    "mino",
    "web components",
    "javascript",
    "html",
    "css"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:mino"
  ],
  "contributes": {
    "languages": [
      {
        "id": "mino",
        "aliases": [
          "Mino",
          "mino"
        ],
        "extensions": [
          ".mino"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/mino-light.svg",
          "dark": "./icons/mino-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "mino",
        "scopeName": "source.mino",
        "path": "./syntaxes/mino.tmLanguage.json",
        "embeddedLanguages": {
          "meta.template.mino": "html",
          "meta.style.mino": "css",
          "meta.script.mino": "javascript",
          "meta.method.mino": "javascript",
          "meta.lifecycle.mino": "javascript"
        }
      }
    ],
    "snippets": [
      {
        "language": "mino",
        "path": "./snippets/mino.json"
      }
    ],
    "commands": [
      {
        "command": "mino.compile",
        "title": "Compile Mino File",
        "category": "Mino"
      },
      {
        "command": "mino.createComponent",
        "title": "Create New Mino Component",
        "category": "Mino"
      }
    ],
    "configuration": {
      "title": "Mino",
      "properties": {
        "mino.autoCompile": {
          "type": "boolean",
          "default": true,
          "description": "Automatically compile .mino files on save"
        },
        "mino.outputDirectory": {
          "type": "string",
          "default": "./dist",
          "description": "Output directory for compiled files"
        },
        "mino.showCompileNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications when compilation completes"
        }
      }
    },
    "keybindings": [
      {
        "command": "mino.compile",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "editorLangId == mino"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^18.19.122",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/vsce": "^2.32.0",
    "eslint": "^8.57.1",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/mino-vscode-extension.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/mino-vscode-extension/issues"
  },
  "homepage": "https://github.com/your-username/mino-vscode-extension#readme",
  "license": "MIT"
}
