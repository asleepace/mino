{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Mino",
  "scopeName": "source.mino",
  "fileTypes": ["mino"],
  "patterns": [
    {
      "include": "#mino-blocks"
    },
    {
      "include": "source.js"
    }
  ],
  "repository": {
    "mino-blocks": {
      "patterns": [
        { "include": "#mino-css-block" },
        { "include": "#mino-html-block" }
      ]
    },
    "mino-css-block": {
      "name": "meta.css.block.mino",
      "begin": "(@css)\\s+([a-zA-Z_$][a-zA-Z0-9_$]*)\\s*(\\{)",
      "beginCaptures": {
        "1": { "name": "keyword.control.directive.css.mino" },
        "2": { "name": "entity.name.function.css.mino" },
        "3": { "name": "punctuation.definition.block.begin.css.mino" }
      },
      "end": "(\\})",
      "endCaptures": {
        "1": { "name": "punctuation.definition.block.end.css.mino" }
      },
      "patterns": [
        { "include": "source.css" }
      ]
    },
    "mino-html-block": {
      "name": "meta.html.block.mino",
      "begin": "(@html)\\s+([a-zA-Z_$][a-zA-Z0-9_$]*)\\s*(\\{)",
      "beginCaptures": {
        "1": { "name": "keyword.control.directive.html.mino" },
        "2": { "name": "entity.name.function.html.mino" },
        "3": { "name": "punctuation.definition.block.begin.html.mino" }
      },
      "end": "(\\})",
      "endCaptures": {
        "1": { "name": "punctuation.definition.block.end.html.mino" }
      },
      "patterns": [
        { "include": "#static-html-content" }
      ]
    },
    "static-html-content": {
      "patterns": [
        { "include": "#html-comment" },
        { "include": "#html-tag" },
        { "include": "#html-text" }
      ]
    },
    "html-comment": {
      "name": "comment.block.html",
      "begin": "<!--",
      "end": "-->",
      "patterns": []
    },
    "html-tag": {
      "patterns": [
        {
          "name": "meta.tag.html",
          "begin": "(<)([a-zA-Z][a-zA-Z0-9]*)",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.tag.begin.html" },
            "2": { "name": "entity.name.tag.html" }
          },
          "end": "(/?>)",
          "endCaptures": {
            "1": { "name": "punctuation.definition.tag.end.html" }
          },
          "patterns": [
            { "include": "#html-attribute" }
          ]
        },
        {
          "name": "meta.tag.html",
          "begin": "(</)([a-zA-Z][a-zA-Z0-9]*)",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.tag.begin.html" },
            "2": { "name": "entity.name.tag.html" }
          },
          "end": "(>)",
          "endCaptures": {
            "1": { "name": "punctuation.definition.tag.end.html" }
          }
        }
      ]
    },
    "html-attribute": {
      "patterns": [
        {
          "name": "meta.attribute.html",
          "begin": "\\s+([a-zA-Z:_-][a-zA-Z0-9:._-]*)(=)",
          "beginCaptures": {
            "1": { "name": "entity.other.attribute-name.html" },
            "2": { "name": "punctuation.separator.key-value.html" }
          },
          "end": "(?=\\s|>|/>)",
          "patterns": [
            {
              "name": "string.quoted.double.html",
              "begin": "(\")",
              "beginCaptures": {
                "1": { "name": "punctuation.definition.string.begin.html" }
              },
              "end": "(\")",
              "endCaptures": {
                "1": { "name": "punctuation.definition.string.end.html" }
              },
              "patterns": [
                { "include": "#template-interpolation" },
                { "include": "#html-entities" }
              ]
            },
            {
              "name": "string.quoted.single.html",
              "begin": "(')",
              "beginCaptures": {
                "1": { "name": "punctuation.definition.string.begin.html" }
              },
              "end": "(')",
              "endCaptures": {
                "1": { "name": "punctuation.definition.string.end.html" }
              },
              "patterns": [
                { "include": "#template-interpolation" },
                { "include": "#html-entities" }
              ]
            },
            {
              "name": "string.unquoted.html",
              "match": "[^\\s>]+",
              "patterns": [
                { "include": "#template-interpolation" }
              ]
            }
          ]
        },
        {
          "name": "entity.other.attribute-name.html",
          "match": "\\s+([a-zA-Z:_-][a-zA-Z0-9:._-]*)(?=\\s|>|/>|=)"
        }
      ]
    },
    "html-entities": {
      "name": "constant.character.entity.html",
      "match": "&([a-zA-Z0-9]+|#[0-9]+|#x[0-9a-fA-F]+);"
    },
    "html-text": {
      "patterns": [
        {
          "name": "text.html",
          "match": "[^<&]+"
        }
      ]
    }
  }
}