{
  "name": "mino-lang",
  "displayName": "Mino Language Support",
  "description": "Syntax highlighting for Mino language with embedded HTML and CSS",
  "version": "1.0.89",
  "publisher": "asleepace",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "mino",
    "html",
    "css",
    "template",
    "dsl"
  ],
  "contributes": {
    "languages": [
      {
        "id": "mino",
        "aliases": ["Mino", "mino"],
        "extensions": [".mino"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mino",
        "scopeName": "source.mino",
        "path": "./syntaxes/mino.tmLanguage.json"
      },
      {
        "scopeName": "source.mino.injection",
        "path": "./syntaxes/mino-js-injections.tmLanguage.json",
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.tsx"
        ]
      }
    ],
    "commands": [
      {
        "command": "mino.format",
        "title": "Format Mino File",
        "category": "Mino"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:mino"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "install-local": "code --install-extension mino-lang-0.1.0.vsix"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asleepace/mino"
  },
  "license": "MIT"
}