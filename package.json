{
  "name": "mino-lang",
  "displayName": "Mino Language Support",
  "description": "Syntax highlighting for Mino language with embedded HTML and CSS",
  "version": "1.1.3",
  "publisher": "asleepace",
  "icon": "icons/mino.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "mino",
    "html",
    "css",
    "template",
    "dsl"
  ],
  "contributes": {
    "configuration": {
      "title": "Mino",
      "properties": {
        "mino.autoCompile": {
          "type": "boolean",
          "default": true,
          "description": "Automatically compile .mino files on save"
        },
        "mino.outputDirectory": {
          "type": "string",
          "default": "./dist",
          "description": "Output directory for compiled JavaScript files (relative to workspace or absolute)"
        },
        "mino.showCompileNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show a notification when compilation completes or fails"
        }
      }
    },
    "configurationDefaults": {
      "workbench.iconTheme": "mino-icons"
    },
    "languages": [
      {
        "id": "mino",
        "aliases": ["Mino", "mino"],
        "extensions": [".mino"],
        "configuration": "./language-configuration.json",
        "icon": {
          "dark": "./icons/mino-dark.svg",
          "light": "./icons/mino-light.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "mino",
        "scopeName": "source.mino",
        "path": "./syntaxes/mino.tmLanguage.json"
      },
      {
        "scopeName": "source.mino.injection",
        "path": "./syntaxes/mino-js-injections.tmLanguage.json",
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.tsx"
        ]
      }
    ],
    "iconThemes": [
      {
        "id": "mino-icons",
        "label": "Mino Icons",
        "path": "./fileicons/mino-icon-theme.json"
      }
    ],
    "commands": [
      {
        "command": "mino.compileFile",
        "title": "Compile Mino File",
        "category": "Mino"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:mino",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run build:assets && npm run compile",
    "build:assets": "node scripts/generate-icon.js",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "install-local": "code --install-extension mino-lang-0.1.0.vsix"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4",
    "sharp": "^0.33.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asleepace/mino"
  },
  "license": "MIT"
}