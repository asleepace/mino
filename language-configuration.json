{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["(", ")"],
    ["[", "]"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["(", ")"],
    ["[", "]"],
    ["\"", "\""],
    ["'", "'"],
    ["`", "`"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["(", ")"],
    ["[", "]"],
    ["\"", "\""],
    ["'", "'"],
    ["`", "`"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*@\\w+.*\\{\\s*$",
      "end": "^\\s*(@end|\\})\\s*$"
    },
    "offSide": true
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*@(template|style|script|method|init|onMounted|onUpdated|onUnmounted|render|directive).*\\{\\s*$",
    "decreaseIndentPattern": "^\\s*(@end|\\})\\s*$",
    "indentNextLinePattern": "^\\s*@(template|style|script|method|init|onMounted|onUpdated|onUnmounted|render|directive)(?!.*\\{.*\\}).*$",
    "unIndentedLinePattern": "^\\s*@(prop|alias).*$"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*@(template|style|script|method|init|onMounted|onUpdated|onUnmounted|render|directive).*\\{\\s*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*@(template|style|script|method|init|onMounted|onUpdated|onUnmounted|render|directive)(?!.*\\{).*$",
      "action": {
        "indent": "indent"
      }
    }
  ]
}