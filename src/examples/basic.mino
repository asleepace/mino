// Test Mino compile



// declare html fragments as variables!
const view = @html {
  <div class="greet">Welcome to mino!</div>
}

// declare css styles as variables!
const styles = @css {
  .greet { color: red; }
}

// easily interpolate values
const message = "Hello, world!"

const greeting = @html {
  <style>${styles}</style>
  <p class="greet">${message}</p>
}


function greet(name) {
  return view(`${name}`);
}

export { view, styles, greet };

