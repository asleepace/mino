{
  "name": "mino-lang",
  "displayName": "Mino Language Support",
  "description": "Syntax highlighting for JS with embedded HTML and CSS",
  "version": "1.2.3",
  "publisher": "asleepace",
  "icon": "icons/mino.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "mino",
    "html",
    "css",
    "template",
    "dsl",
    "js",
    "ts"
  ],
  "contributes": {
    "configuration": {
      "title": "Mino",
      "properties": {
        "mino.autoCompile": {
          "type": "boolean",
          "default": true,
          "description": "Automatically compile .mino files on save"
        },
        "mino.outputDirectory": {
          "type": "string",
          "default": "./dist",
          "description": "Output directory for compiled JavaScript files (relative to workspace or absolute)"
        },
        "mino.showCompileNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show a notification when compilation completes or fails"
        },
        "mino.compiler.emitExports": {
          "type": "boolean",
          "default": true,
          "description": "Emit ESM named exports for compiled symbols"
        },
        "mino.compiler.emitFunctions": {
          "type": "boolean",
          "default": false,
          "description": "When true, compile assignment blocks to functions with inferred params; otherwise emit template strings"
        },
        "mino.compileOnSaveExtensions": {
          "type": "array",
          "items": { "type": "string" },
          "default": [".mino", ".jsxm"],
          "description": "File extensions to auto-compile on save"
        }
      }
    },
    "configurationDefaults": {
      "workbench.iconTheme": "mino-icons"
    },
    "languages": [
      {
        "id": "mino",
        "aliases": [
          "Mino",
          "mino"
        ],
        "extensions": [
          ".mino"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "dark": "./icons/mino32x32.png",
          "light": "./icons/mino32x32.png"
        }
      },
      {
        "id": "javascript",
        "extensions": [
          ".jsxm"
        ],
        "aliases": [
          "JavaScript (Mino)"
        ]
      }
    ],
    "grammars": [
      {
        "language": "mino",
        "scopeName": "source.mino",
        "path": "./syntaxes/mino.tmLanguage.json"
      },
      {
        "scopeName": "source.mino.injection",
        "path": "./syntaxes/mino-js-injections.tmLanguage.json",
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.tsx"
        ]
      }
    ],
    "iconThemes": [
      {
        "id": "mino-icons",
        "label": "Mino Icons",
        "path": "./fileicons/mino-icon-theme.json"
      }
    ],
    "commands": [
      {
        "command": "mino.compileFile",
        "title": "Compile Mino File",
        "category": "Mino"
      }
    ],
    "typescriptServerPlugins": [
      {
        "name": "./tsserver/mino-ts-plugin.js",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ]
  },
  "activationEvents": [
    "onLanguage:mino",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build": "bash ./build.sh",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "pretest": "tsc -p ./",
    "test": "node --test out/tests/**/*.js",
    "install-local": "code --install-extension mino-lang-*.vsix",
    "build:eslint-plugin": "tsc -p packages/eslint-plugin-mino/tsconfig.json"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "sharp": "^0.33.4",
    "typescript": "^4.9.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asleepace/mino"
  },
  "license": "MIT"
}
